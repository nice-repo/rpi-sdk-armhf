prefix = /usr
exec_prefix = ${prefix}
libdir = ${exec_prefix}/lib
pkglibdir = ${libdir}/gnu-smalltalk
datarootdir = ${prefix}/share
datadir = ${datarootdir}
pkgdatadir = ${datadir}/gnu-smalltalk
moduledir = ${pkglibdir}
